<h1>BOOKING</h1>

<%= form_with model: @booking do |booking_form| %>
  <%= booking_form.hidden_field :flight_id, value: params[:flight_id] %>

  <h2>FLIGHT INFO</h2>
  <p><%= @flight.from_airport.name %> -> <%= @flight.to_airport.name %></p>
  <p><%= @flight.start %></p>
  <p><%= distance_of_time_in_words @flight.duration %></p>

  <h2>PASSENGERS INFO</h2>
  <%= booking_form.fields_for :passengers do |passenger_form| %>
    <h3>PASSENGER #</h3>
    <p>
      <%= passenger_form.label :name %>
      <%= passenger_form.text_field :name %>
    </p>

    <p>
      <%= passenger_form.label :email %>
      <%= passenger_form.text_field :email %>
    </p>
  <% end %>

  <%= booking_form.submit 'Fly' %>
<% end %>
